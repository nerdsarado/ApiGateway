{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "GatewayAPI": "Debug"
    }
  },
  "Gateway": {
    "Routes": [
      {
        "ServiceName": "ProgramaProdutos",
        "BaseUrl": "http://localhost:6001",
        "PathTemplate": "/api/produtos/{endpoint}",
        "RequiresAuthentication": false,
        "TimeoutSeconds": 120
      },
      {
        "ServiceName": "ProgramaClientes",
        "BaseUrl": "http://localhost:6003",
        "PathTemplate": "/api/clientes/{endpoint}",
        "RequiresAuthentication": false,
        "TimeoutSeconds": 120
      },
      {
        "ServiceName": "ProgramaFornecedores",
        "BaseUrl": "http://localhost:6002",
        "PathTemplate": "/api/fornecedores/{endpoint}",
        "RequiresAuthentication": false,
        "TimeoutSeconds": 120
      }
    ]
  },
  "AllowedHosts": "*"
}